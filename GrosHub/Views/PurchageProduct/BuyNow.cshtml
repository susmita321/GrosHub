@model IEnumerable<GrosHub.Models.ShippingAddress>
@{
    ViewBag.Title = "BuyNow";
    Layout = "~/Views/Shared/_LayoutHeader.cshtml";
}

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">

        <div class="checkout__form">
            <h4>Billing Details</h4>

            <div class="row">
                <div class="col-lg-8 col-md-6">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="checkout__input">
                                @using (Html.BeginForm("ChangeShippingAddress", "PurchageProduct"))
                                {
                                    foreach (var item in Model)
                                    {
                                        bool val = Convert.ToBoolean(item.IsCurrent);

                                        @Html.RadioButton("rdlSA", item.AddressId,isChecked: val) @Html.Label(item.Address)
                                    }
                                }

                            </div>
                        </div>

                    </div>

                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="checkout__order">
                        <h4>Your Order</h4>
                        <div class="checkout__order__products">Products <span>Total</span></div>
                        <ul>
                            <li>Vegetable’s Package <span>$75.99</span></li>
                            <li>Fresh Vegetable <span>$151.99</span></li>
                            <li>Organic Bananas <span>$53.99</span></li>
                        </ul>
                        <div class="checkout__order__subtotal">Subtotal <span>$750.99</span></div>
                        <div class="checkout__order__total">Total <span>$750.99</span></div>
                        <div class="checkout__input__checkbox">
                            <label for="acc-or">
                                Create an account?
                                <input type="checkbox" id="acc-or">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adip elit, sed do eiusmod tempor incididunt
                            ut labore et dolore magna aliqua.
                        </p>
                        <div class="checkout__input__checkbox">
                            <label for="payment">
                                Check Payment
                                <input type="checkbox" id="payment">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="checkout__input__checkbox">
                            <label for="paypal">
                                Paypal
                                <input type="checkbox" id="paypal">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        @*<button type="submit" class="site-btn">PLACE ORDER</button>*@
                        @Html.ActionLink("Confirm Payment", "Payment", "PurchageProduct", null)
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Checkout Section End -->
<!-- Footer Section Begin -->
